extends layout

block content
  h1 Title : #{book.title}

  p #[strong Author:] #{book.author.name}
  p #[strong Summary:] #{book.summary}
  p #[strong Genre:]&nbsp;
    each val, index in book.genre
      a(href=val.url) #{val.name}
      |,
  hr
  p
    a(href=book.url+'/delete') Delete Book
  p
    a(href=book.url+'/update') Update Book
